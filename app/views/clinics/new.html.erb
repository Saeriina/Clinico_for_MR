<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= "クリニック登録" %></h1>
      <%= form_with model: @clinic, class: "new_clinic" do |f| %>
        <div class="mb-3">
          <%= f.label :clinic_name %>
          <%= f.text_field :clinic_name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :doctor_name %>
          <%= f.text_field :doctor_name, class: "form-control" %>
        </div>
        <%= f.submit nil, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>