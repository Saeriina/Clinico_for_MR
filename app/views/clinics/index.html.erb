<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
<% end %>

<div class="container pt-3">
  <!-- クリニック一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @clinics.present? %>
          <% @clinics.each do |clinic| %>
            <div class="col-sm-12 col-lg-4 mb-3">
              <div id="clinic-id-<%= clinic.id %>">
                <div class="card">
                  <%= image_tag "board_placeholder.png", class: "card-img-top", width: "300", height:"200" %>
                  <div class="card-body">
                    <div class="d-flex">
                      <h4 class="card-title">
                        <%= link_to clinic.clinic_name, clinic_path(clinic) %>
                      </h4>
                      <div class='ms-auto'>
                        <%= link_to '#', id: 'button-edit-#{clinic.id}' do %>
                          <i class="bi bi-pencil-fill"></i>
                        <% end %>
                        <%= link_to '#', id: 'button-delete-#{clinic.id}', method: :delete, data: {confirm: ''} do %>
                          <i class="bi bi-trash-fill"></i>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="mb-3">登録したクリックがありません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>